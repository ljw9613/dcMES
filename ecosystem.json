{
  "apps": [
    {
      "name": "dcMes-server-sc",
      "script": "./dcMes_server_sc/bin/www",
      "instances": 10,
      "exec_mode": "cluster",
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 2222
      },
      "error_file": "./logs/pm2/error/dcMes-server-err-YYYY-MM-DD.log",
      "out_file": "./logs/pm2/out/dcMes-server-out-YYYY-MM-DD.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "merge_logs": true,
      "time": true
    },
    {
      "name": "dcMes-server-ws",
      "script": "./dcMes_server_ws/wsServer.js",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      },
      "error_file": "./logs/pm2/error/dcMes-server-ws-err-YYYY-MM-DD.log",
      "out_file": "./logs/pm2/out/dcMes-server-ws-out-YYYY-MM-DD.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "merge_logs": true,
      "time": true
    },
    {
      "name": "dcMes-server-system",
      "script": "./dcMes_server_system/bin/www",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      },
      "error_file": "./logs/pm2/error/dcMes-server-system-err-YYYY-MM-DD.log",
      "out_file": "./logs/pm2/out/dcMes-server-system-out-YYYY-MM-DD.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "merge_logs": true,
      "time": true
    }
  ]
} 